<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TesisApp.Views.CrearNuevaCuentaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CrearNuevaCuentaPage">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,0">
            <GradientStop Offset="0.1" Color="#5d92e8" />
            <GradientStop Offset="1.0" Color="#044fc7" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Border
        Margin="20,0"
        BackgroundColor="#c7d7f0"
        VerticalOptions="Center">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>

        <VerticalStackLayout
            Margin="10,50"
            Padding="10,5"
            Spacing="5">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="CREAR NUEVA CUENTA" />
            <!--<Label Text="Usuario" />-->
            <Frame
                Padding="10,0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <Grid ColumnDefinitions="*,20,110">
                    <Entry
                        BackgroundColor="Red"
                        HeightRequest="40"
                        Placeholder="Usuario"
                        PlaceholderColor="#8591a1" />
                    <Image Grid.Column="1" Source="check_icon.png" />
                    <Frame
                        Grid.Column="2"
                        Padding="10,5"
                        BackgroundColor="White">
                        <Label FontSize="10" Text="- Almenos una mayúscula - Mínimo 8 caracteres - Almenos un caracter especial" />
                    </Frame>
                </Grid>
            </Frame>

            <Frame
                Padding="10,0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <Grid ColumnDefinitions="*,20,110">
                    <Entry
                        HeightRequest="40"
                        Placeholder="Contraseña"
                        PlaceholderColor="#8591a1" />
                    <Image Grid.Column="1" Source="check_icon.png" />
                    <!--<Frame
                        Grid.Column="2"
                        Padding="10,5"
                        BackgroundColor="White">
                        <Label FontSize="10" Text="- Almenos una mayúscula - Mínimo 8 caracteres - Almenos un caracter especial" />
                    </Frame>-->
                </Grid>
            </Frame>
            <Frame
                Padding="10,0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <Grid ColumnDefinitions="*,20,110">
                    <Entry
                        HeightRequest="40"
                        Placeholder="Confirmar contraseña"
                        PlaceholderColor="#8591a1" />
                    <Image Grid.Column="1" Source="uncheck_icon.png" />
                    <Frame
                        Grid.Column="2"
                        Padding="10,5"
                        
                        BackgroundColor="White">
                        <Label FontSize="10" Text="- Almenos una mayúscula - Mínimo 8 caracteres - Almenos un caracter especial" />
                    </Frame>
                </Grid>
            </Frame>
            <!--<Label Text="Correo" />-->
            <Frame
                Padding="10,0"
                BackgroundColor="Transparent"
                BorderColor="Transparent">
                <Grid ColumnDefinitions="*,20,110">
                    <Entry
                        HeightRequest="40"
                        Placeholder="Correo"
                        PlaceholderColor="#8591a1" />
                    <Image Grid.Column="1" Source="uncheck_icon.png" />
                    <!--<Frame
                        Grid.Column="2"
                        Padding="10,5"
                        BackgroundColor="White">
                        <Label FontSize="10" Text="- Almenos una mayúscula - Mínimo 8 caracteres - Almenos un caracter especial" />
                    </Frame>-->
                </Grid>
            </Frame>
            <Button Text="Crear" />
        </VerticalStackLayout>
    </Border>
</ContentPage>